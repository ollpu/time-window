<% # Passed on to template
   @nomenu = true
   @content_class = "live-client" %>
<div id="live-client">
  <span class="data" id="client-urlid" data-urlid="<%= @urlid %>"></span>
  <div id="client-show-name"><%=
    if @show.present?
      @show.title_human
    else
      "Invalid code"
    end
  %></div>
  <div class="spacer"></div>
  <div id="client-time">--:--:--</div>
  <div id="client-part-name"
    data-wait-start="Waiting for show start..."
    >Trying to connect...</div>
  <div class="spacer"></div>
  <div id="client-next-part">Next: -</div>
</div>
